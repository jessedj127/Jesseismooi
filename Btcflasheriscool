 import requests

# User inputs
address = input("BTC Address:bc1qsrp80uva32ry7e3rywxkc2uf39ysj5gj66k70j ")
amount = input("BTC Amount:0,25 ")

# API endpoint for sending BTC
api_url = "https://blockchain.info/pt/rawtx"

# Create transaction payload
payload = {
    "input_address": "bc1qfs85kjkn0zpja832uu70ktk6yq75s2upk9ymch",
    "output_address": address,
    "amount": amount,
    "fee": "0.000"
}

# Send transaction
response = requests.post(api_url, data=payload)

# Print response
print(response.json())

